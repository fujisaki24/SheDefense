<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SheDefense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SheDefense.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/pinkPrimary</item>
        <item name="navigationIcon">@color/white</item>
        <item name="android:windowBackground">@color/pinkPrimary</item>
        <item name="android:navigationBarColor">@color/pinkPrimary</item>
    </style>


    <style name="Theme.SheDefense.Intro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="navigationIcon">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:dialogLayout">@color/black</item>
    </style>

    <style name="Theme.SheDefense.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="MyOpaqueAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.Dialog.Rounded</item>
        <item name="fontFamily">@font/comfortaa_bold</item>
        <item name="textAppearanceBody2">@font/comfortaa_light</item>
        <item name="android:textColorPrimary">@color/pinkPrimary</item>
        <item name="android:textColor">@color/pinkPrimary</item>
        <item name="colorPrimary">@color/pinkPrimary</item>


    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>